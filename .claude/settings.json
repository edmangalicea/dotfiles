  "statusLine": {
    "type": "command",
    "command": "bash /Users/test-user/.claude/statusline-command.sh"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/safe-delete.py\""
          },
          {
            "type": "command",
            "command": "echo \"$(date '+%Y-%m-%d %H:%M:%S') - $CLAUDE_TOOL_PARAMETERS\" >> ~/.claude/bash-commands.log"
          }
        ]
      }
    ]
  }
